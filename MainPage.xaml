<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mod3LabB.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image x:Name="QuizImage" Source="dotnet_bot.png" HeightRequest="275" />

            <Label x:Name="QuizOutput" Text=""/>

            <HorizontalStackLayout Spacing="10">
                <Button x:Name="TrueBtn" Text="Yes" Clicked="AnswerTrue"/>
                <Button x:Name="FalseBtn" Text="No" Clicked="AnswerFalse"/>
            </HorizontalStackLayout>

            <Button x:Name="SwiperButton" Text="Use the swiping version" Clicked="GoToSwiperPage"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
